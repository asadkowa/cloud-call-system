# PBX Configuration
PBX_DOMAIN=localhost
SIP_PORT=5060
MEDIA_PORT=5080
RTP_PORT_START=10000
RTP_PORT_END=20000
RECORDING_ENABLED=true
RECORDING_PATH=/var/recordings
MAX_CONCURRENT_CALLS=100

# FreeSWITCH Event Socket Library
ESL_HOST=localhost
ESL_PORT=8021
ESL_PASSWORD=ClueCon

# Cluster Configuration
PBX_CLUSTER_ENABLED=false
PBX_NODE_ID=1
PBX_CLUSTER_NODES=pbx-1.cloudcall.local:5060,pbx-2.cloudcall.local:5060

# Redis for clustering (when PBX_CLUSTER_ENABLED=true)
REDIS_PBX_HOST=localhost
REDIS_PBX_PORT=6380
REDIS_PBX_PASSWORD=CloudCallRedis123!

# SIP Security
SIP_TLS_ENABLED=false
SIP_TLS_PORT=5061
SIP_TLS_CERT_PATH=/etc/ssl/certs/cloudcall.crt
SIP_TLS_KEY_PATH=/etc/ssl/private/cloudcall.key

# Media Configuration
MEDIA_ENCRYPTION=false
MEDIA_CODEC_PREFS=PCMU,PCMA,G722,G729

# Call Recording
RECORD_CALLS_BY_DEFAULT=false
RECORD_FORMAT=wav
RECORD_STEREO=true
RECORD_WASTE_RESOURCES=false

# Session Border Controller
SBC_ENABLED=false
SBC_HOST=localhost
SBC_PORT=5063

# External SIP Trunk Configuration
SIP_TRUNK_ENABLED=false
SIP_TRUNK_PROVIDER=twilio
SIP_TRUNK_HOST=your-provider.pstn.twilio.com
SIP_TRUNK_USERNAME=your-account-sid
SIP_TRUNK_PASSWORD=your-auth-token
SIP_TRUNK_REALM=your-provider.pstn.twilio.com